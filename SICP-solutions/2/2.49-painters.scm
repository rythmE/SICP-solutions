(load "2.46-vect.scm")
(load "2.47-frame.scm")
(load "2.48-segment.scm")
(load "segments-painter.scm")

(define (boarder frame)
  (let ((x (make-vect 0.0 0.0))
		(x1 (make-vect 1.0 0.0))
		(x3 (make-vect 1.0 1.0))
		(x2 (make-vect 0.0 1.0)))
	(let ((a (make-segment x x1))
		  (b (make-segment x1 x3))
		  (c (make-segment x2 x3))
		  (d (make-segment x x2)))	
      (segments->painter (list a b c d)) frame)))
	  
(define (cross frame)
  (let ((x (make-vect 0.0 0.0))
		(x1 (make-vect 1.0 0.0))
		(x3 (make-vect 1.0 1.0))
		(x2 (make-vect 0.0 1.0)))
	(let ((e (make-segment x x3))
		  (f (make-segment x1 x2)))	
      (segments->painter (list e f)) frame)))
	  
(define (diamond frame)
  (let ((x5 (make-vect 0.5 0.5))
		(x6 (make-vect 1.0 0.5))
		(x7 (make-vect 0.5 1.0))
		(x8 (make-vect 0.0 0.5)))
	(let ((g (make-segment x5 x6))
		  (h (make-segment x6 x7))
		  (i (make-segment x8 x7))
		  (j (make-segment x5 x8)))	
      (segments->painter (list g h i j)) frame)))
	  
